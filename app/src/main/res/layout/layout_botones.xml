<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teclado"
        >

    <TextView
            android:clickable="true"
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/botonUno"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/botonDos"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/botonCuatro"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="#FFFFFF" />

    <TextView
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/botonDos"
            app:layout_constraintStart_toEndOf="@+id/botonUno"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/botonTres"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/botonCinco"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="#FFFFFF" />

    <TextView
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/botonTres"
            app:layout_constraintStart_toEndOf="@+id/botonDos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/botonSeis"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="#FFFFFF" />

    <TextView
            android:text="4"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/botonCuatro"
            app:layout_constraintTop_toBottomOf="@+id/botonUno"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/botonCinco"
            app:layout_constraintBottom_toTopOf="@+id/botonSiete"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="#FFFFFF" />

    <TextView
            android:text="5"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/botonCinco"
            app:layout_constraintTop_toBottomOf="@+id/botonDos"
            app:layout_constraintStart_toEndOf="@+id/botonCuatro"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/botonSeis"
            app:layout_constraintBottom_toTopOf="@+id/botonOcho"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="#FFFFFF" />

    <TextView
            android:text="6"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/botonSeis"
            app:layout_constraintTop_toBottomOf="@+id/botonTres"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/botonCinco"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/botonNueve"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="#FFFFFF" />

    <TextView
            android:text="7"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/botonSiete"
            app:layout_constraintTop_toBottomOf="@+id/botonCuatro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/botonOcho"
            app:layout_constraintBottom_toTopOf="@+id/botonPunto"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="#FFFFFF" />

    <TextView
            android:text="8"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/botonOcho"
            app:layout_constraintStart_toEndOf="@+id/botonSiete"
            app:layout_constraintEnd_toStartOf="@+id/botonNueve"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/botonCinco"
            app:layout_constraintBottom_toTopOf="@+id/botonCero"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="#FFFFFF" />

    <TextView
            android:text="9"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/botonNueve"
            app:layout_constraintTop_toBottomOf="@+id/botonSeis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/botonOcho"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/botonAc"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="#FFFFFF" />

    <TextView
            android:text="."
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/botonPunto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/botonCero"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/botonSiete"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="40sp"
            android:paddingBottom="20dp"/>

    <TextView
            android:text="0"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/botonCero"
            app:layout_constraintStart_toEndOf="@+id/botonPunto"
            app:layout_constraintEnd_toStartOf="@+id/botonAc"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/botonOcho"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="#FFFFFF" />

    <TextView
            android:text="AC"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/botonAc"
            app:layout_constraintTop_toBottomOf="@+id/botonNueve"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/botonCero"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>